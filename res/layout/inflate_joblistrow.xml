<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ofcampus="http://schemas.android.com/apk/res/com.ofcampus"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/joblistview_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/joblist_row_rect" >

        <RelativeLayout
            android:id="@+id/joblistview_relpicname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp" >

            <ImageView
                android:id="@+id/joblistview_img_pic"
                android:layout_width="@dimen/joblitview_picwd"
                android:layout_height="@dimen/joblitview_picwd"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@drawable/joblist_row_rect"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profilepic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@+id/joblistview_img_imp"
                android:layout_toRightOf="@+id/joblistview_img_pic" >

                <com.ofcampus.ui.CustomTextView
                    android:id="@+id/joblistview_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/job_name"
                    android:textSize="@dimen/joblitview_name"
                    android:textStyle="normal"
                    ofcampus:fontName="Helvetica.otf" />

                <com.ofcampus.ui.CustomTextView
                    android:id="@+id/joblistview_txt_postdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/joblistview_txt_name"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/job_Date"
                    android:textSize="@dimen/joblitview_postdate"
                    android:textStyle="normal"
                    ofcampus:fontName="Helvetica.otf" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/joblistview_img_imp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toLeftOf="@+id/joblistview_img_arrow"
                android:contentDescription="@string/app_name"
                android:src="@drawable/important_selector"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/joblistview_img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_downarrow" />
        </RelativeLayout>

        <com.ofcampus.ui.CustomTextView
            android:id="@+id/joblistview_txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joblistview_relpicname"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/job_subject"
            android:textSize="@dimen/joblitview_Subject"
            android:textStyle="bold"
            ofcampus:fontName="HelveticaBold.ttf" />

        <com.ofcampus.ui.CustomTextView
            android:id="@+id/joblistview_txt_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joblistview_txt_subject"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:maxLines="4"
            android:text=""
            android:textColor="@color/job_contain"
            android:textSize="@dimen/joblitview_contain"
            android:textStyle="normal"
            ofcampus:fontName="Helvetica.otf" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/joblistview_img_post_rel"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/comment_pager_hight"
            android:layout_below="@+id/joblistview_txt_contain"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:elevation="3dp"
            card_view:cardCornerRadius="3dp" >

            <ImageView
                android:id="@+id/joblistview_img_post"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/no_postimage" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/joblistview_linear_buttonsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joblistview_img_post_rel"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/joblistview_txt_reply"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#E84C3D"
                android:contentDescription="@string/app_name"
                android:padding="4dp"
                android:src="@drawable/ic_reply" />

            <ImageView
                android:id="@+id/joblistview_txt_share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#5498C7"
                android:contentDescription="@string/app_name"
                android:padding="4dp"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/joblistview_txt_comment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#18BC9A"
                android:contentDescription="@string/app_name"
                android:padding="4dp"
                android:src="@drawable/ic_comment" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>