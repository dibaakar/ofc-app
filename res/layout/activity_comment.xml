<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/joblist_bg_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/actiontool_bar" >
    </include>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/activity_comment_comntlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent" >
        </ListView>

        <RelativeLayout
            android:id="@+id/activity_comment_rel_comnt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray" >

            <EditText
                android:id="@+id/activity_comment_edt_cmnt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/activity_comment_btnsend"
                android:background="@android:color/white"
                android:gravity="center_vertical|left"
                android:hint="Enter comment here."
                android:maxLines="3"
                android:padding="8dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/joblitview_Subject" />

            <ImageView
                android:id="@+id/activity_comment_btnsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_send" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>