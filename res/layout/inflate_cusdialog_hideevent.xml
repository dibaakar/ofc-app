<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/iflate_custdialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="12dp"
            android:text="Reply"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/theme_color" />

        <RelativeLayout
            android:id="@+id/iflate_custdialog_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iflate_custdialog_header"
            android:background="@color/theme_color" >
        </RelativeLayout>

        <!--
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/iflate_custdialog_ph" >
        </RelativeLayout>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iflate_custdialog_header"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/iflate_custdialog_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_gmailicon"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="visible" />

            <TextView
                android:id="@+id/iflate_custdialog_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_replysms"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="visible" />

            <TextView
                android:id="@+id/iflate_custdialog_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="8dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>