<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.gc.materialdesign.views.CheckBox
        xmlns:materialdesign="http://schemas.android.com/apk/lib/com.gc.materialdesign"
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="#1E88E5"
        materialdesign:checked="true" />

    <TextView
        android:id="@+id/activity_createjob_new_txt_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/checkBox"
        android:padding="15dp"
        android:text="@string/craetejob_txt_Email"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/joblitview_Subject" />

</RelativeLayout>